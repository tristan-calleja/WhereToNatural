<div class="container mt-3">
  <div class="row">
    <div class="col-md-12 col-lg-12 col-xl-12">
      <h6><a href="/district/listbydistrict" style="color: black !important;">
          Back to List
        </a></h6>
    </div>
  </div>
</div>



<div class="container mt-3">

  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-12 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex">
                <div class="row">
                  <div class="col-md-12 col-lg-12 col-xl-12 float-left mb-3">
                    <h5 class="card-title">
                      <h2><%= district.name %></h2>
                    </h5>
                  </div>
                </div>
              </div>
              <div class="d-flex">
                <div class="row">
                  <div class="col-md-12 col-lg-12 col-xl-12 float-left mb-3">
                    <h5 class="card-title">
                      <a href="/district/edit/<%= district._id %>" class="btn btn-secondary">
                        Edit
                      </a>
                    </h5>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-xl-12 float-left mb-3">
                  <% district.places.forEach(places => {%>
                  <p class="card-text text-capitalize">
                    • <%= places %>
                  </p>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
  </div>