<div class="container mt-3">
    <div class="row">
      <div class="col-md-12 col-lg-12 col-xl-12">
        <h6><a href="/district/show/<%= district._id %>" style="color: black !important;">
            Back
          </a></h6>
      </div>
    </div>
  </div>

<form action="/district/edit/<%= district._id %>" method="POST">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mt-4 mb-4">
                 <h4><u>Update details for:</u><br> <i><%= district.name %></i> </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <input type="text" class="form-control" name="name" placeholder="District Name" value="<%= district.name %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 mt-4">
                    <h6 class="mb-4"><u>Places in this district:</u></h6>
                    <% district.places.forEach(places => {%>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <input type="text" value="<%= places %>" id="inputDistrictPlaces">
                                <button class="btn btn-secondary btn-sm" onclick="removePlaceFromDistrict()">Delete</button>
                            </div>
                        </div>
                <% }) %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mt-4">
                    <button class="btn btn-secondary btn-form" type="submit">Update</button>
                </div>
            </div>
        </div>

</form>