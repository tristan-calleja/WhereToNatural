<div class="container mt-5">
    <h1>List by Name</h1>
    </br>
    <div class="mb-12">
      <div class="row">
        <div class="col-md-12">
              <a class="btn btn-light" href="/new">Add New Place</a>
          </div>
      </div>
    </div>
    </br>
    <div class="row">
      <div class="col-md-9">
        <div class="row">
          <% places.forEach(place => { %>
          <div class="col-md-6 mb-3 d-flex">
            <div class="card flex-fill">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/show/<%= place._id %>"><%= place.name %></a>
                    , (<%= place.district.name %>)
                </h5>
                <h5 class="card-title">
                    <a href="/edit/<%= place._id %>" class="btn btn-light">
                        Edit
                    </a>
                  </h5>
                </div>
  
                <p class="card-text text-capitalize">
                  <%= place.phoneNumber %>
                </p>
                <p class="card-text text-capitalize">
                    <%= place.email %>
                </p>
                <p class="card-text text-capitalize">
                    <%= place.website %>
                </p>
                <p class="card-text text-capitalize">
                    <%= place.description %>
                </p>
                <p class="card-text text-capitalize">
                    Added by: <%= place.addedBy.username %>
                </p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>